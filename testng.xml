<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd" >
<suite name="BankingAutomationSuite" parallel="tests" thread-count="3">
  <test name="Login">
    <parameter name="browser" value="chrome"/>
    <classes>
      <class name="com.capstone.bank.tests.LoginTests"/>
    </classes>
  </test>

  <test name="Loan">
    <parameter name="browser" value="chrome"/>
    <classes>
      <class name="com.capstone.bank.tests.LoanTests"/>
    </classes>
  </test>

  <test name="EMI">
    <parameter name="browser" value="chrome"/>
    <classes>
      <class name="com.capstone.bank.tests.EmiTests"/>
    </classes>
  </test>

  <test name="Transfer">
    <parameter name="browser" value="chrome"/>
    <classes>
      <class name="com.capstone.bank.tests.FundTransferTests"/>
    </classes>
  </test>

  <test name="History">
    <parameter name="browser" value="chrome"/>
    <classes>
      <class name="com.capstone.bank.tests.TransactionHistoryTests"/>
    </classes>
  </test>
</suite>
